{
    "compilerOptions": {
        "rootDirs": ["src"],
        "baseUrl": "./src",
        "outDir": "dist",
        "lib": ["es2020"],
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "types": ["node"],
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
    },
     "include": ["src/migrations/**/*"]
}